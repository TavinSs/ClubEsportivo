@{
	Layout = "_LayoutDeslogado";
}
@if (ViewData["MsgErro"] != null)
{
	<div class="alert-danger">
		@ViewData["MsgErro"]
	</div>
}
@model EsqueciSenha
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Esqueci minha senha</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		#button {
            background-color: saddlebrown;
            border: none;
            border-radius: 26px;
            cursor: pointer;
        }

        #button:hover {
            background-color: rgb(227, 123, 49);
            color: rgb(249, 226, 210);
        }

        body {
            background-color: rgb(246, 244, 233);
        }

		#senha{
			border: hidden;
			border-radius: 25px;
			background-color: rgb(246, 244, 233);
			cursor: text;
			width: 360px;
			height: 35px;
			padding-left: 10px;
		}

		#confirmacaoSenha {
			border: hidden;
			border-radius: 25px;
			background-color: rgb(246, 244, 233);
			cursor: text;
			width: 360px;
			height: 35px;
			padding-left: 10px;
		}
	</style>
</head>
<body>
	<div class="container row align-items-center justify-content-center">
		<div class="col-12 col-md-8 col-lg-4">
			<div class="card shadow-sm">
				<div class="card-body">
					<div class="mb-4">
						<h5>Cadastro de nova senha</h5>
					</div>
					<form asp-controller="Login" asp-action="NovaSenha">
						<div class="mb-3">
							<label for="senha" class="form-label">Senha</label>
							<input type="text" id="senha" class="form-control" name="senha" placeholder="Nova senha"
								   required="">
						</div>
						<div class="mb-3">
							<label for="confirmacaoSenha" class="form-label">Confirmação da senha</label>
							<input type="text" id="confirmacaoSenha" class="form-control" name="confirmacaoSenha" placeholder="Confirme a senha"
								   required="">

						</div>
						<div class="mb-3 d-grid">
							<button type="submit" id="button" class="btn btn-primary">
								Cadastrar nova senha
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>

</html>