@{
    Layout = "_LayoutDeslogado";
}
@if (ViewData["MsgErro"] != null)
{
    <div class="alert-danger">
        @ViewData["MsgErro"]
    </div>
}
@model EsqueciSenha
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Esqueci minha senha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #button {
            background-color: saddlebrown;
            border: none;
            border-radius: 26px;
            cursor: pointer;
        }

        #button:hover {
            background-color: rgb(227, 123, 49);
            color: rgb(249, 226, 210);
        }

        body {
            background-color: rgb(246, 244, 233);
        }

        #codigo{
            border: hidden;
            border-radius: 25px;
            background-color: rgb(246, 244, 233);
            cursor: text;
            width: 360px;
            height: 35px;
            padding-left: 10px;
        }
    </style>
</head>
<body>

    <div class="container row align-items-center justify-content-center">
        <div class="col-12 col-md-8 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-4">
                        <h5>Código de validação</h5>
                        <p class="mb-2">
                            Informe o código que enviamos ao seu email
                        </p>
                    </div>
                    <form asp-controller="Login" asp-action="EsqueciSenhaCodigo">
                        <div class="mb-3">
                            <label for="codigo" class="form-label">Código</label>
                            <input type="text" id="codigo" class="form-control" name="codigo"  placeholder="Código enviado"
                                   required="">

                        </div>
                        <div class="mb-3 d-grid">
                            <button type="submit" id="button" class="btn btn-primary">
                                Validar código
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>

<script>

        // Função que será executada após 2 segundos
        function exibirMensagem() {
            alert('Email: Seu código de alteração de senha é 101010');
        }

    // Definindo um atraso de 2 segundos antes de chamar a função
    setTimeout(exibirMensagem, 2000);

</script>
            