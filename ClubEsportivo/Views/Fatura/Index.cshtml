        #faturaNaoPaga01{
            border: 1px solid red;
        }

        #corpoNaoPago01{
            border: 1px solid red;
        }



        .card{
            border: 1px solid rgb(76, 252, 53);
        }

        .card-body{
            border: 1px solid rgb(76, 252, 53);
        }

        .botaoFatura {
            border: 1px solid black;
            border-radius: 50px;
            padding: 7px;
            background-color: #f5e9e9;
            color: black;
            text-decoration: none;
        }

          .botaoFatura:hover {
                color: black;
                text-decoration: none; 
                background-color: rgb(76, 252, 53);
                transform: translateY(-5);
                box-shadow: 0px 15px 20px black;
                transition-duration: 0.5s;
            }

        .botaoNaoPago {
            border: 1px solid black;
            border-radius: 50px;
            padding: 7px;
            background-color: #f5e9e9;
            color: black;
            text-decoration: none;
        }

        .botaoNaoPago:hover {
            color: white;
            text-decoration: none;
            background-color: red;
            transform: translateY(-5);
            box-shadow: 0px 15px 20px black;
            transition-duration: 0.5s;
        }
       
        body{
            background-color: rgb(246, 244, 233);
